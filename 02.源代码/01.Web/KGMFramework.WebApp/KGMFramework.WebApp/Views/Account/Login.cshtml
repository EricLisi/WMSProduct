@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/framework-login.css" rel="stylesheet" />
<body>
    <div class="mytab container">
        <div class="row" style="padding:20px">
            <div class="col-md-7">
                <p><h1>进销存管理系统</h1>
                <p style="text-align: right;font-size: 20px;">专业、快捷、我们能为您做的更多</p>
            </div>
            <div class="col-md-4 col-md-push-1">
                <div class="loginbox">
                    <h2 style="text-align:center">平台登陆</h2>
                    <form id="loginform" method="post">
                        <div class="form-group has-feedback">
                            <label for="username">用户名</label>

                            <input type="text" class="form-control" id="username" name="username" placeholder="请输入用户名" required="required">
                            <a id="clr" class="glyphicon glyphicon-remove form-control-feedback myicon"></a>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="password">密码</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码" required="required" onkeydown="loginDown(event)">
                            <a id="show" class="glyphicon glyphicon-eye-close form-control-feedback myicon"></a>
                        </div>
                        <div class="form-group">
                            <label for="platform">登录平台</label>
                            <select id="platform" class="form-control">
                                <option>进销存管理系统</option>
                                @*<option>客户信息管理平台</option>*@
                            </select>
                        </div>
                        <div class="form-group">
                            <input id="login" type="button" class="btn btn-primary btn-lg btn-block" style="margin-top:20px" value="登陆" />
                        </div>
                        <div class="form-group">
                            <p class="form-control-static text-center errorText" id="loginInfo"></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/Content/js/framework-login.js"></script>