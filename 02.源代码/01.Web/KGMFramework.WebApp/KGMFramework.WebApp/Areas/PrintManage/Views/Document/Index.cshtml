@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";

}

<div class="ui-layout" id="layout" style="height: 100%; width: 100%;position:relative;">
    <div class="ui-layout-west">
        <div id="itemTree"></div>
    </div>
    <div class="ui-layout-center">
        <div class="topPanel">
            <div class="toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <a id="NF-add" class="btn btn-primary dropdown-text" onclick="btn_add() "><i class="fa fa-plus"></i>新建</a>
                </div>
                <div class="btn-group">
                    <a id="NF-print" class="btn btn-primary dropdown-text" onclick="print()"><i class="fa fa-print"></i>打印</a>
                </div>
                <div class="btn-group">
                    <a id="NF-Uploadify" class="btn btn-primary dropdown-text" onclick="FileOper.Uploadify({ router: 'Document' })"><i class="fa fa-arrow-down"></i>导入</a>
                </div>
                <div class="btn-group">
                    <a id="NF-ExportExcel" class="btn btn-primary dropdown-text" onclick="ExportExcel({ router: 'Document' })"><i class="fa fa-arrow-up"></i>导出</a>
                </div>
                <div class="operate">
                    <ul class="nav nav-pills">
                        <li class="first" style="border:none"></li>
                        <li><a id="NF-edit" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>编辑</a></li>
                        <li><a id="NF-delete" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                        <li><a id="NF-audit" onclick="btn_audit()"><i class="fa fa-check-circle-o"></i>审核</a></li>
                        <li><a id="NF-qaudit" onclick="btn_qaudit()"><i class="fa fa-times-circle-o"></i>弃审</a></li>
                        <li><a id="NF-print" onclick="print()"><i class="fa fa-print"></i>打印</a></li>
                        <li><a id="NF-look" onclick="btn_details()"><i class="fa fa-print"></i>查看</a></li>
                    </ul>
                    <a href="javascript:;" class="close"></a>
                </div>
                <script>$('.toolbar').authorizeButton()</script>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td>
                            <div class="input-group">
                                <input id="txt_keyword" type="text" class="form-control" placeholder="项目/标签/版本/语言" style="width: 200px;">
                                <span class="input-group-btn">
                                    <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                    <button id="btnsearch" type="button" class="btn  btn-primary" style="font-size:12px;padding:5px;margin-left:2px;" onclick="btnSearchCondition()">高级搜索</button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>

<script src="~/Content/js/index.js"></script>
<script src="~/Content/js/indextab.js"></script>
<script src="~/Content/js/framework-IndexVar.js"></script>
<script src="~/Areas/PrintManage/Contect/js/Document/index.js"></script>
<script src="~/Content/js/framework-Index.js"></script>
