@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="F_ParentId" name="F_ParentId" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="F_FullName" name="F_FullName" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">编号</th>
                    <td class="formValue">
                        <input id="F_EnCode" name="F_EnCode" type="text" class="form-control required" placeholder="请输入编号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">模块ID</th>
                    <td class="formValue">
                        <input id="F_ModuleId" name="F_ModuleId" type="text" class="form-control required" placeholder="请输入模块ID" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">模块名称</th>
                    <td class="formValue">
                        <input id="F_ModuleName" name="F_ModuleName" type="text" class="form-control required" placeholder="请输入模块名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">模块图标</th>
                    <td class="formValue">
                        @*<input id="F_ModuleIcon" name="F_ModuleIcon" type="text" class="form-control" placeholder="请输入模块图标" />*@
                        <div class="input-group">
                            <input id="F_ModuleIcon" name="F_ModuleIcon" type="text" class="form-control">
                            <span class="input-group-btn">
                                <a class="btn btn-primary" onclick="SelectIcon()"><i class="fa fa-ellipsis-h"></i></a>
                            </span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">地址</th>
                    <td class="formValue">
                        <input id="F_Url" name="F_Url" type="text" class="form-control" placeholder="请输入地址" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">排序</th>
                    <td class="formValue">
                        <input id="F_SortCode" name="F_SortCode" type="text" class="form-control" placeholder="请输入排序" onkeyup="(this.v=function(){this.value=this.value.replace(/[^0-9-]+/,'');}).call(this)" onblur="this.v();" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>


<script src="~/Content/js/framework-FormVar.js"></script>
<script src="~/Areas/SystemManage/Content/js/TerminalGridColumn/Form.js"></script>
<script src="~/Content/js/framework-Form.js"></script>