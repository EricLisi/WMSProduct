@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="F_ParentId" name="F_ParentId" class="form-control required">
                            @*<option value="0">父节点</option>*@
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="F_FullName" name="F_FullName" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">编号</th>
                    <td class="formValue">
                        <input id="F_EnCode" name="F_EnCode" type="text" class="form-control required" placeholder="请输入编号" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">显示值</th>
                    <td class="formValue">
                        <input id="F_Display" name="F_Display" type="text" class="form-control required" placeholder="请输入显示值" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">文本框类型</th>
                    <td class="formValue">
                        <input id="F_Type" name="F_Type" type="text" class="form-control required" placeholder="请输入文本框类型" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">地址</th>
                    <td class="formValue">
                        <input id="F_Address" name="F_Address" type="text" class="form-control" placeholder="请输入地址" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">排序</th>
                    <td class="formValue">
                        <input id="F_SortCode" name="F_SortCode" type="text" class="form-control" placeholder="请输入排序" onkeyup="(this.v=function(){this.value=this.value.replace(/[^0-9-]+/,'');}).call(this)" onblur="this.v();" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" style="height: 35px;">选项</th>
                    <td class="formValue" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="F_Required" name="F_Required" type="checkbox"><label for="F_Required">是否必填</label>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>


<script src="~/Content/js/framework-FormVar.js"></script>
<script src="~/Areas/SystemManage/Content/js/TerminalListSetting/Form.js"></script>
<script src="~/Content/js/framework-Form.js"></script>