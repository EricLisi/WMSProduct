<form id="form1">
    <table class="form">
        <tr>
            <th class="formTitle">单据号</th>
            <td class="formValue">
                <input id="F_EnCode" name="F_EnCode" type="text" readonly="readonly" class="form-control" placeholder="单据号后台自动生成" />
                <input id="F_Id" name="F_Id" type="hidden" />
            </td>
            <th class="formTitle">制单人</th>
            <td class="formValue">
                <input id="F_Operator" name="F_Operator" type="text" readonly="readonly" class="form-control" value="@ViewBag.UserName" />
            </td>
            <th class="formTitle">单据日期</th>
            <td class="formValue">
                <input id="F_date" name="F_date" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" value="@DateTime.Now.ToShortDateString()" />
            </td>
        </tr>
        <tr>
            <th class="formTitle">盘点仓库</th>
            <td class="formValue">
                <select id="F_WarehouseId" name="F_WarehouseId" class="form-control required"></select>
            </td>
            <th class="formTitle">盘点货位</th>
            <td class="formValue">
                <select id="F_CargoPositionId" name="F_CargoPositionId" class="form-control" multiple="multiple"></select>
            </td>
            <th class="formTitle" style="padding-top: 5px;">备注 </th>
            <td class="formValue">
                <input id="F_Description" name="F_Description" type="text" class="form-control" placeholder="请输入备注" />
            </td>
        </tr>
        <tr>
            <td colspan="6">
                <div class="pull-left" style="padding:10px" id="rowTools">
