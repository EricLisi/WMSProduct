@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="topPanel">
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="仓库编码/仓库名称" searchfiled="F_FullName" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary" onclick="btn_add()"><i class="fa fa-plus"></i>新建仓库信息</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改仓库信息</a></li>
                <li><a id="NF-deleteFrom" authorize="yes" onclick="btn_deleteFrom()"><i class="fa fa-trash-o"></i>删除仓库信息</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看仓库信息</a></li>
                <li><a id="NF-EnMark" authorize="yes" onclick="btn_EnMark('F_EnabledMark',true)"><i class="fa fa-search-plus"></i>启用仓库</a></li>
                <li><a id="NF-EnMark" authorize="yes" onclick="btn_EnMark('F_EnabledMark',false)"><i class="fa fa-search-plus"></i>禁止仓库</a></li>
                <li><a id="NF-CaroGoMark" authorize="yes" onclick="btn_EnMark('F_CarGoMark',true)"><i class="fa fa-search-plus"></i>启用货位</a></li>
                <li><a id="NF-CaroGoMark" authorize="yes" onclick="btn_EnMark('F_CarGoMark',false)"><i class="fa fa-search-plus"></i>禁止货位</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
<script src="~/Content/js/framework-IndexVar.js"></script>
<script src="~/Areas/WmsManage/Content/js/Warehouse/Index.js"></script>
<script src="~/Content/js/framework-Index.js"></script>