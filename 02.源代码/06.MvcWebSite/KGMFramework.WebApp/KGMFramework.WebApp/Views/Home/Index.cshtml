@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/index.css" rel="stylesheet" />
<link href="~/Content/css/framework-theme.css" rel="stylesheet" />
<link href="~/Content/css/framework-ui.css" rel="stylesheet" />
<body>
    <div id="ajax-loader">
        <img src="~/Content/img/ajax-loader.gif" />
    </div>
    <div id="theme-wrapper">
        <header class="navbar" id="header-navbar">
            <div class="container row" style="padding:0;">
                <div class="col-md-1 col-sm-1 hidden-xs hidden-sm logo-container">
                    <a href="#" id="logo" class="navbar-brand">进销存管理系统</a>
                </div>
                <div class="col-md-9 col-sm-9 col-xs-7">
                    <div class="row">
                        <div class="col-md-1 col-sm-1 col-xs-1 min-menu">
                            <a href="#" class="hidden-sm hidden-xs" id="make-small-nav"><i class="fa fa-bars fa-2x"></i></a>
                            <a href="#" class="hidden-md hidden-lg" id="app-menu"><i class="fa fa-bars fa-2x"></i></a>
                        </div>
                        <div class="col-md-11 col-sm-11 col-xs-11 menu-container hidden-xs">
                            <div id="tabinfo" class="page-tabs menuTabs">
                                <ul id="menuul" class="page-tabs-content">
                                    <li id="home-index" class="blockli"><a href="javascript:;" class="menuTab active" data-id="/Home/Default">欢迎首页</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="header-nav" class="col-md-1 col-sm-3 col-xs-5">
                    <ul class="nav navbar-nav pull-right">
                        <li class="dropdown profile-dropdown pull-right">
                            <a href="#" class="dropdown" data-toggle="dropdown">
                                <img src="~/Content/img/user.jpg" alt="" />
                                <span>@ViewBag.UserName</span>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a class="menuItem" data-id="userInfo" href="/SystemManage/User/Info?keyValue=@ViewBag.UserId&show=1"><i class="fa fa-user"></i>个人信息</a></li>
                                <li class="divider"></li>
                                <li><a href="~/Account/LogOut"><i class="ace-icon fa fa-power-off"></i>安全退出</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
            <div id="appmenu-dialog" class="layui-layer layer-anim-02" times="1" showtime="0" contype="string">
                <div class="app-menu-container">
                    <div id="app-menuForm" class="layui-layer-content">
                        <ul id="app-menudata" class="nav nav-pills nav-stacked"></ul>
                    </div>
                </div>
            </div>
        </header>
        <div id="page-wrapper" class="container">
            <div class="row">
                <!-- 左侧导航开始 -->
                <div id="nav-col" class="hidden-sm hidden-xs">
                    <section id="col-left" class="col-left-nano">
                        <div id="col-left-inner" class="col-left-nano-content">
                            <div class="collapse navbar-collapse navbar-ex1-collapse" id="sidebar-nav">
                                <ul class="nav nav-pills nav-stacked"></ul>
                            </div>
                        </div>
                    </section>
                </div>
                <!-- 左侧导航结束 -->
                <!-- 内容页开始 -->
                <div id="content-wrapper">
                    <div class="content-iframe">
                        <div class="mainContent" id="content-main">
                            <iframe class="NFine_iframe" width="100%" height="100%" src="/Home/Default" frameborder="0" data-id="/Home/Default"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <!-- 内容页结束 -->
        </div>

        <!-- 页脚开始 -->
        <footer class="main-footer text-center">
            <div class="pull-right hidden-xs ">
                <b>Version</b> 1.0.1
            </div>
            <strong>Copyright &copy; 2018 <a href="http://www.kgmsoft.cn" target="_blank">上海金戈马软件有限公司</a>.</strong>
            reserved.
        </footer>
        <!-- 页脚结束 -->
    </div>
    <div id="loadingPage" style="display: none;">
        <div class="loading-shade"></div>
        <div class="loading-content" onclick="$.loading(false)">数据加载中，请稍后…</div>
    </div>


    <script src="~/Content/plugins/dialog/dialog.js"></script>
    <script src="~/Content/plugins/cookie/jquery.cookie.js"></script>
    <script src="~/Content/js/framework-ui.js"></script>
    <script src="~/Content/js/framework-clientdata.js"></script>
    <script src="~/Content/js/index.js"></script>
    <script src="~/Content/js/indextab.js"></script>
    <script src="~/Content/plugins/loading/pace.min.js"></script>
</body> 