@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<form id="form1">
    <div class="form row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">账户</th>
                    <td class="formValue">
                        <input id="F_Account" name="F_Account" type="text" class="form-control" placeholder="请输入账户" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">公司</th>
                    <td class="formValue">
                        <select id="F_OrganizeId" name="F_OrganizeId" class="form-control"></select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">部门</th>
                    <td class="formValue">
                        <select id="F_DepartmentId" name="F_DepartmentId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">岗位</th>
                    <td class="formValue">
                        <select id="F_DutyId" name="F_DutyId" class="form-control">
                            <option value="">==请选择==</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">姓名</th>
                    <td class="formValue">
                        <input id="F_RealName" name="F_RealName" type="text" class="form-control" placeholder="请输入姓名" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">性别</th>
                    <td class="formValue">
                        <select id="F_Gender" name="F_Gender" class="form-control">
                            <option value="true">男</option>
                            <option value="false">女</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">手机</th>
                    <td class="formValue">
                        <input id="F_MobilePhone" name="F_MobilePhone" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">生日</th>
                    <td class="formValue">
                        <input id="F_Birthday" name="F_Birthday" type="text" class="form-control input-wdatepicker" onfocus="WdatePicker()" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">微信</th>
                    <td class="formValue">
                        <input id="F_WeChat" name="F_WeChat" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">邮箱</th>
                    <td class="formValue">
                        <input id="F_Email" name="F_Email" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
        <div class="pull-right" style="padding-right: 35px;">
            <a class="btn btn-primary" onclick="ChangePwd()"><i class="fa fa-save" style="margin-right:5px;"></i>修改密码</a>
        </div>
    </div> 
</form>
<script src="~/Content/js/framework-FormVar.js"></script>
<script src="~/Areas/SystemManage/Content/js/User/Form.js"></script>
<script src="~/Content/js/framework-Form.js"></script>