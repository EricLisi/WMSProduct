@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<form id="form1">
    <div class="form row">
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="F_ParentId" name="F_ParentId" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">类型</th>
                    <td class="formValue">
                        <select id="F_CategoryId" name="F_CategoryId" class="form-control required">
                            <option value="">==请选择==</option>
                            <option value="Group">集团</option>
                            <option value="Company">公司</option>
                            <option value="Department">部门</option>
                            <option value="WorkGroup">小组</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">名称</th>
                    <td class="formValue">
                        <input id="F_FullName" name="F_FullName" type="text" class="form-control required" placeholder="请输入名称" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">编号</th>
                    <td class="formValue">
                        <input id="F_EnCode" name="F_EnCode" type="text" class="form-control required" placeholder="请输入编号" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">负责人</th>
                    <td class="formValue">
                        <input id="F_ManagerId" name="F_ManagerId" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div> 
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">手机</th>
                    <td class="formValue">
                        <input id="F_MobilePhone" name="F_MobilePhone" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">排序</th>
                    <td class="formValue">
                        <input id="F_SortCode" name="F_SortCode" type="text" class="form-control required" placeholder="请输入排序" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">微信</th>
                    <td class="formValue">
                        <input id="F_WeChat" name="F_WeChat" type="text" class="form-control" />
                    </td> 
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">电话</th>
                    <td class="formValue">
                        <input id="F_TelePhone" name="F_TelePhone" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">邮箱</th>
                    <td class="formValue">
                        <input id="F_Email" name="F_Email" type="text" class="form-control" />
                    </td> 
                </tr>
            </table>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">传真</th>
                    <td class="formValue">
                        <input id="F_Fax" name="F_Fax" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle">地址</th>
                    <td class="formValue">
                        <input id="F_Address" name="F_Address" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle" style="height: 35px;">选项</th>
                    <td class="formValue" colspan="3" style="padding-top: 1px;">
                        <div class="ckbox">
                            <input id="F_EnabledMark" name="F_EnabledMark" type="checkbox" checked="checked"><label for="F_EnabledMark">有效</label>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <table>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Description" name="F_Description" class="form-control" style="height: 100px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

<script src="~/Content/js/framework-FormVar.js"></script>
<script src="~/Areas/SystemManage/Content/js/Organize/Form.js"></script>
<script src="~/Content/js/framework-Form.js"></script>