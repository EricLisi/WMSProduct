@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div class="topPanel">
    <div class="row">
        <div class="col-md-6 col-sm-7 col-xs-5">
            <div class="btn-group">
                <button id="btndropmenu" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-search"></i>查询过滤 <span class="caret"></span>
                </button>
                <ul class="dropdown-menu list-search-menu form row" data-stoppropagation="true">
                    <li>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">产品号</th>
                                    <td class="formValue">
                                        <input id="F_EnCode" name="F_EnCode" type="text" class="form-control" placeholder="请输入产品号">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">名称</th>
                                    <td class="formValue">
                                        <input id="F_FullName" name="F_FullName" type="text" class="form-control" placeholder="请输入名称">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">代码</th>
                                    <td class="formValue">
                                        <input id="F_ShortCode" name="F_ShortCode" type="text" class="form-control" placeholder="请输入代码">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">别名</th>
                                    <td class="formValue">
                                        <input id="F_ShortName" name="F_ShortName" type="text" class="form-control" placeholder="请输入别名">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">规格</th>
                                    <td class="formValue">
                                        <input id="F_Standard" name="F_Standard" type="text" class="form-control" placeholder="请输入规格">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <table>
                                <tr>
                                    <th class="formTitle">品牌</th>
                                    <td class="formValue">
                                        <input id="F_Brand" name="F_Brand" type="text" class="form-control" placeholder="请输入品牌">
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                            <div class="pull-right">
                                <a id="btn_search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-6 col-sm-5 col-xs-7">
            <div class="pull-right toolbar">
                <div class="btn-group">
                    <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
                </div>
                <div class="btn-group">
                    <a id="NF-add" authorize="yes" class="btn btn-primary hidden-xs" onclick="btn_add()"><i class="fa fa-plus"></i>新建产品</a>
                </div>
                <div class="btn-group">
                    <a id="NF-edit" authorize="yes" class="btn btn-info hidden-xs hidden-sm" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改产品</a>
                </div>  
                <div class="btn-group">
                    <a id="NF-delete" authorize="yes" class="btn btn-danger hidden-xs hidden-sm" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除产品</a>
                </div>
                <div class="btn-group">
                    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bars"></i>更多操作</a>
                    <ul class="dropdown-menu pull-right">
                        <li><a id="NF-add" class="hidden-sm hidden-md hidden-lg" authorize="yes" onclick="btn_add()"><i class="fa fa-plus"></i>新建产品</a></li>
                        <li><a id="NF-edit" class="hidden-md hidden-lg" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改产品</a></li>
                        <li><a id="NF-delete" class="hidden-md hidden-lg" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除产品</a></li>
                        <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看产品</a></li>
                        <li><a id="NF-Download" authorize="yes" onclick="btn_details()"><i class="fa fa-download"></i>下载导入模板</a></li>
                        <li><a id="NF-Upload" authorize="yes" onclick="btn_details()"><i class="fa fa-upload"></i>导入Excel</a></li>
                        <li><a id="NF-Export" authorize="yes" onclick="btn_details()"><i class="fa fa-file-excel-o"></i>导出Excel</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>
<script src="~/Content/js/framework-IndexVar.js"></script>
<script src="~/Areas/WmsManage/Content/js/Product/Index.js"></script>
<script src="~/Content/js/framework-Index.js"></script> 